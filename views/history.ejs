<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <title>üìç Location History</title>
    <style>
      body {
        font-family: Arial, sans-serif;
        background-color: #f9f9f9;
        margin: 0;
        padding: 20px;
      }

      h2 {
        text-align: center;
        margin-bottom: 1rem;
      }

      .nav {
        text-align: center;
        margin-bottom: 1rem;
      }

      .nav a {
        text-decoration: none;
        color: #007bff;
        font-weight: bold;
      }

      table {
        width: 90%;
        margin: auto;
        border-collapse: collapse;
        box-shadow: 0 2px 8px rgba(0, 0, 0, 0.05);
        background: white;
      }

      th, td {
        padding: 12px 16px;
        border: 1px solid #ddd;
        text-align: center;
      }

      th {
        background-color: #f2f2f2;
      }

      tr:nth-child(even) {
        background-color: #f9f9f9;
      }

      tr:hover {
        background-color: #f1f1f1;
      }
    </style>
  </head>
  <body>
    <div class="nav">
      <a href="/">‚Üê Back to Dashboard</a>
    </div>

    <h2>üìç Location History</h2>

    <table>
      <thead>
        <tr>
          <th>Name</th>
          <th>Email</th>
          <th>Latitude</th>
          <th>Longitude</th>
          <th>Timestamp</th>
        </tr>
      </thead>
      <tbody>
        <% locations.forEach(location => { %>
          <tr>
            <td><%= location.name %></td>
            <td><%= location.email %></td>
            <td><%= location.latitude.toFixed(6) %></td>
            <td><%= location.longitude.toFixed(6) %></td>
            <td><%= new Date(location.timestamp).toLocaleString() %></td>
          </tr>
        <% }); %>
      </tbody>
    </table>
  </body>
</html>
